<?xml version="1.0" encoding="utf-8"?>


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"

    >

    <GridLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="@dimen/news_card_height"
        android:alignmentMode="alignMargins"
        android:columnOrderPreserved="false"
        android:columnCount="4"
        android:rowCount="1"
        android:id="@+id/grid_layout">

        <android.support.v7.widget.CardView
            android:layout_width="@dimen/news_card_width"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            android:layout_margin="2dp"
            android:layout_rowWeight="1"
            app:cardCornerRadius="8dp"
            app:cardElevation="8dp"
            android:id="@+id/bike1"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >


                <ImageView
                    android:id="@+id/honda_logo"
                    android:layout_width="148dp"
                    android:layout_height="100dp"
                    android:layout_margin="10dp"
                    android:src="@mipmap/honda" />
                <TextView
                    android:layout_width="145dp"
                    android:layout_height="30dp"
                    android:height="40dp"
                    android:text="Honda "
                    android:textColor="@color/cardview_dark_background"
                    android:textSize="20sp"
                    android:textAlignment="center"

                    />

            </LinearLayout>
        </android.support.v7.widget.CardView>
        <!-- 2nd Card -->

        <android.support.v7.widget.CardView
            android:layout_width="@dimen/news_card_width"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            android:layout_margin="2dp"
            android:layout_rowWeight="1"
            app:cardCornerRadius="8dp"
            app:cardElevation="8dp"
            android:id="@+id/bike2"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >


                <ImageView
                    android:id="@+id/yamaha_logo"
                    android:layout_width="148dp"
                    android:layout_height="100dp"
                    android:layout_margin="10dp"
                    android:src="@mipmap/yamahalogo" />
                <TextView
                    android:layout_width="145dp"
                    android:layout_height="30dp"
                    android:height="40dp"
                    android:text="Yamaha "
                    android:textColor="@color/cardview_dark_background"
                    android:textSize="20sp"
                    android:textAlignment="center"

                    />

            </LinearLayout>
        </android.support.v7.widget.CardView>

        <!-- 2nd Card -->

        <android.support.v7.widget.CardView
            android:layout_width="@dimen/news_card_width"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            android:layout_margin="2dp"
            android:layout_rowWeight="1"
            app:cardCornerRadius="8dp"
            app:cardElevation="8dp"
            android:id="@+id/bike3"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >


                <ImageView
                    android:id="@+id/hero_logo"
                    android:layout_width="148dp"
                    android:layout_height="100dp"
                    android:layout_margin="10dp"
                    android:src="@mipmap/hero" />
                <TextView
                    android:layout_width="145dp"
                    android:layout_height="30dp"
                    android:height="40dp"
                    android:text="HERO "
                    android:textColor="@color/cardview_dark_background"
                    android:textSize="20sp"
                    android:textAlignment="center"

                    />

            </LinearLayout>
        </android.support.v7.widget.CardView>


        <!-- 2nd Card -->

        <android.support.v7.widget.CardView
            android:layout_width="@dimen/news_card_width"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            android:layout_margin="2dp"
            android:layout_rowWeight="1"
            app:cardCornerRadius="8dp"
            app:cardElevation="8dp"
            android:id="@+id/bike4"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >


                <ImageView
                    android:id="@+id/toyota_logo"
                    android:layout_width="148dp"
                    android:layout_height="100dp"
                    android:layout_margin="10dp"
                    android:src="@mipmap/bajaj" />
                <TextView
                    android:layout_width="145dp"
                    android:layout_height="30dp"
                    android:height="40dp"
                    android:text="BAJAJ "
                    android:textColor="@color/cardview_dark_background"
                    android:textSize="20sp"
                    android:textAlignment="center"

                    />

            </LinearLayout>
        </android.support.v7.widget.CardView>

    </GridLayout>
</LinearLayout>










