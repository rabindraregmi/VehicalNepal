                android:layout_height="wrap_content"
                android:clickable="true"
                android:id="@+id/item1"
                >


                <ImageView
                    android:id="@+id/image"
                    android:layout_width="130dp"
                    android:layout_height="154dp"
                    android:layout_margin="10dp"
                    android:src="@mipmap/bike"
                    app:layout_constraintLeft_toLeftOf="parent"
                    tools:ignore="MissingConstraints"
                    tools:layout_editor_absoluteY="0dp" />
                <TextView
                    android:layout_width="145dp"
                    android:layout_height="0dp"
                    android:height="40dp"
                    android:text="There is a news related to Bikes"
                    android:textColor="@color/cardview_dark_background"
                    android:textSize="10sp"
                    tools:layout_editor_absoluteX="-1dp"
                    tools:layout_editor_absoluteY="103dp"
                    tools:ignore="MissingConstraints"
                    app:layout_constraintTop_toBottomOf="@id/image"
                    />
                <TextView
                    android:id="@+id/name_in_list_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="NAME OF BIKE"
                    android:textColor="@color/cardview_dark_background"
                    android:textSize="30sp"
                    tools:layout_editor_absoluteX="-1dp"
                    tools:layout_editor_absoluteY="103dp"
                    tools:ignore="MissingConstraints"
                    app:layout_constraintLeft_toRightOf="@id/image"
                    app:layout_constraintTop_toTopOf="parent"
                    android:textStyle="bold"
                    android:textAlignment="center"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="100cc"
                    app:layout_constraintTop_toBottomOf="@id/name_in_list_view"
                    app:layout_constraintLeft_toRightOf="@id/image"
                    android:id="@+id/cc"
                    android:layout_marginLeft="5dp"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="50kmpl"
                    app:layout_constraintTop_toBottomOf="@id/name_in_list_view"
                    app:layout_constraintLeft_toRightOf="@id/cc"
                    android:id="@+id/mileage"
                    android:layout_marginLeft="5dp"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="100kg"
                    app:layout_constraintTop_toBottomOf="@id/name_in_list_view"
                    app:layout_constraintLeft_toRightOf="@id/mileage"
                    android:id="@+id/weight"
                    android:layout_marginLeft="5dp"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Rs 2,00,000"
                    app:layout_constraintTop_toBottomOf="@id/cc"
                    app:layout_constraintLeft_toRightOf="@id/image"
                    android:id="@+id/price"
                    android:layout_marginLeft="5dp"
                    android:textSize="20sp"
                    android:layout_marginTop="10dp"
                    android:textStyle="bold"
                    />
            </android.support.constraint.ConstraintLayout>
